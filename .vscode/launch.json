{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",

            "preLaunchTask": "build" 
        },
        {
            "label": "build go program", // Метка, которую мы будем использовать в launch.json
            "type": "shell",
            "command": "go build -o ${workspaceFolder}/out/${input:appName} ${fileDirname}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        }
        
    ],
    "inputs": [
        {
            "id": "appName",
            "type": "promptString",
            "description": "Enter the name for the output executable file:",
            "default": "myprogram"
        }
    ]

}
