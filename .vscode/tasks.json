{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "build project executable",
            "type": "shell",
            // Команда go build собирает весь проект и помещает результат в корень workspace
            "command": "go build -o ${workspaceFolder}/app_runner",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        }
	]
}